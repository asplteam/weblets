<div id="contentwrapper">
	<div id="contentcolumn">
		<div class="content-title">Contact Us</div>
		<div class="content-text-contact-page">Thank you for contacting Webletes. We look forward to hearing from you.</div>
		<div class="contact-form">
			<form name=contact method=get class="frmadd">					
				<div class="contact-l">
				  <label for="name">Name:</label>
				  <input type="text" class="input" name="name" id="name" />
				</div>					
				<div class="contact-l">
				  <label for="email">Email:</label>
				  <input type="text" class="input" name="email" id="email" />
				</div>
				<div class="contact-l">
				  <label for="name">Phone:</label>
				  <input type="text" class="input" name="Phone" id="name" />
				</div>					
				<div class="contact-l">
				  <label for="email">Message:</label>
				  <input type="text" class="input" name="Message" id="email" />
				</div>
				<div class="content-submit-btn"><%=image_tag('submit-btn.jpg')%></div>
			</form>
		</div>
	</div>
</div>
<%= render 'layouts/left_part' %>
